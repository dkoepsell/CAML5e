{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/caml2/schemas/snapshot_instance.schema.json",
  "title": "CAML 2.0 Snapshot Instance",
  "type": "object",
  "$defs": {
    "id": {
      "$ref": "./defs.schema.json#/$defs/id"
    },
    "ref": {
      "$ref": "./defs.schema.json#/$defs/ref"
    },
    "snapshot": {
      "type": "object",
      "required": [
        "id",
        "time_utc",
        "world_hash",
        "state_hash",
        "roles_hash"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "#/$defs/id"
        },
        "time_utc": {
          "$ref": "./defs.schema.json#/$defs/iso_datetime"
        },
        "world_hash": {
          "type": "string"
        },
        "state_hash": {
          "type": "string"
        },
        "roles_hash": {
          "type": "string"
        },
        "narration": {
          "type": "string"
        },
        "derived_from_transition": {
          "$ref": "#/$defs/ref"
        }
      }
    }
  }
}