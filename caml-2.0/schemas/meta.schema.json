{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/caml2/schemas/meta.schema.json",
  "title": "CAML 2.0 Meta",
  "type": "object",
  "required": [
    "id",
    "title",
    "created_utc",
    "authors"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "created_utc": {
      "type": "string",
      "format": "date-time"
    },
    "updated_utc": {
      "type": "string",
      "format": "date-time"
    },
    "authors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "system": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      }
    }
  }
}