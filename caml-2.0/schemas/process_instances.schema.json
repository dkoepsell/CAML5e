{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/caml2/schemas/process_instances.schema.json",
  "title": "CAML 2.0 Process Instances",
  "type": "object",
  "$defs": {
    "id": {
      "$ref": "./defs.schema.json#/$defs/id"
    },
    "ref": {
      "$ref": "./defs.schema.json#/$defs/ref"
    },
    "process_instance": {
      "type": "object",
      "required": [
        "id",
        "type",
        "timebox",
        "participants"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "#/$defs/id"
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "timebox": {
          "$ref": "./defs.schema.json#/$defs/timebox"
        },
        "participants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/ref"
          }
        },
        "location": {
          "$ref": "#/$defs/ref"
        },
        "inputs": {
          "type": "array",
          "items": {
            "$ref": "./process_inputs.schema.json#/$defs/process_input"
          }
        },
        "outcomes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}