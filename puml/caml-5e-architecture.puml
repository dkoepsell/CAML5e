@startuml
skinparam backgroundColor #FFFFFF
skinparam classAttributeIconSize 0

package "CAML Core" {
  class AdventureModule
  class Scene
  class Encounter
  class Location
  class Agent
  class NPC
  class PC
  class Item
  class Condition
  class Outcome
  class DispositionToOccur
}

package "CAML-5e Rules Layer" {
  class AbilityScore
  class Action
  class Spell
  class ConditionStatus
  class ResourcePool
}

